{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Polyglot",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.polyglot",
					"match": "=>|\\b(if|elif|else|while|for|in|match)\\b|\\s\\b(end)\\b"
				},
				{
					"name": "keyword.polyglot",
					"match": "\\b(fn|ret|end)\\b"
				},
				{
					"name": "constant.language.bool.polyglot",
					"match": "\\b(true|false)\\b"
				},
				{
					"name": "entity.name.type",
					"match": "\\b(int|num|bool|char|str)\\b|(?<=type )\\b\\w+\\b|(?<=var \\b\\w+\\b( )*:( )*)\\b\\w+\\b|(?<=: )\\b\\w+\\b"
				},
				{
					"name": "meta.function.definition entity.name.function",
					"match": "(?<=fn)( )*\\w+"
				},
				{
					"name": "meta.function.call entity.name.function",
					"match": "\\w+( )*(?=\\()"
				},
				{
					"name": "variable.parameter meta.struct.member source",
					"match": "(?<=\\w\\.)\\w+"
				},
				{
					"name": "storage",
					"match": "\\b(var|type)\\b"
				},
				{
					"name": "comment",
					"match": "//.*"
				},
				{
					"name": "keyword.operator",
					"match": "(>)|(<)|(=)|(>=)|(<=)|(:)|(&&)|(\\|\\|)|(\\+)|(-)|(\\*)|(/)|(%)|(\\.)"
				},
				{
					"name": "constant.numeric",
					"match": "\\d"
				},
				{
					"name": "variable.other",
					"match": "\\w"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.polyglot",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.polyglot",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "main.pg"
}